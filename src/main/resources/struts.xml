        <!-- 關於我們 -->
        <action name="about">
            <result>/template/about.jsp</result>
        </action>

        <!-- 購物車 -->
        <action name="basket">
            <result>/template/basket.jsp</result>
        </action>

        <!-- 聯絡我們 -->
        <action name="contact">
            <result>/template/contact.jsp</result>
        </action>



        <!-- 商品頁（男裝） -->
        <action name="men">
            <result>/template/men.jsp</result>
        </action>

        <!-- 商品頁（女裝） -->
        <action name="women">
            <result>/template/women.jsp</result>
        </action>

        <!-- 商品詳情頁（靜態版） -->
        <action name="single">
            <result>/template/single.jsp</result>
        </action>

    </package>
</struts>
